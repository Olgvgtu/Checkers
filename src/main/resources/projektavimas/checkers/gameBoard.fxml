<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<AnchorPane prefHeight="600" prefWidth="600" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projektavimas.fxControllers.MainController">
    <Label fx:id="turnLabel" layoutX="250" layoutY="50" text="Turn: White" />
    <GridPane fx:id="boardGrid" layoutX="100" layoutY="100" prefHeight="400" prefWidth="400" style="-fx-border-color: saddlebrown; -fx-border-width: 5; -fx-border-radius: 1;">
    </GridPane>
    <Button fx:id="startGameButton" text="Start Game" layoutX="250" layoutY="510" prefHeight="20" prefWidth="100" onAction="#startGame"/>
</AnchorPane>
